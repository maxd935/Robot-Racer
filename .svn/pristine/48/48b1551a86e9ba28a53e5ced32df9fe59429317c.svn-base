package com.l3aa1.definition;

/**
 * La classe {@link Constantes} comporte les différents paramètres
 * de l'application pouvant être utilisés à différents endroits.
 */
public abstract class Constantes {
	/* Configuration générale */
	
	/**
	 * Largeur de la fenêtre principale
	 */
	public static final int		WINDOW_WIDTH		= 725;
	
	/**
	 * Hauteur de la fenêtre principale
	 */
	public static final int		WINDOW_HEIGHT		= 600;
	
	/**
	 * Titre de la fenêtre principale
	 */
	public static final String	WINDOW_TITLE		= "Robot-Racer";
	
	/**
	 * Activation du pad
	 */
	public static       boolean	ACTIVATE_CONTROLS	= true;

	/* Configuration du réseau */
	
	/**
	 * IP statique par défaut du raspberry PI (du robot)
	 */
	public static       String	IP_ROBOT 			= "192.168.0.9";
	
	/**
	 * Port du serveur sur le Raspberry PI
	 */
	public static       int   	PORT_ROBOT   		= 12345;
	
	/**
	 * Port local pour le streaming
	 */
	public static       int   	PORT_UDP_LOCAL   	= 45655;
	
	/**
	 * Temps maximal avant échec de la connexion en ms
	 */
	public static final int   	CONNEXION_TIMEOUT 	= 1500;

	/* LecteurImage configuration */
	/**
	 * Hauteur de l'image à afficher dans la fenêtre de streaming
	 */
	public static final int		IMG_HEIGHT		= 91;
	/**
	 * Largeur de l'image à afficher dans la fenêtre de streaming
	 */
	public static final int		IMG_WIDTH		= IMG_HEIGHT * 4 / 3;
	
	/**
	 * Taille du buffer de réception d'image
	 */
	public static final int		BUFFER_SIZE		= 512;
	/**
	 * Largeur de la fenetre de l'image reçue
	 */
	public static final int		CONTAINER_WIDTH		= 350;
	
	/* ControlePad */

	/**
	 * Largeur du pad
	 */
	public static final int		CONTROLE_PAD_WIDTH		= 150;
}
